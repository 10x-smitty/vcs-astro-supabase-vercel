---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Register">
  <main class="flex flex-col flex-1 justify-center items-center px-8 w-full max-md:px-5 max-md:max-w-full py-24">
    <div class="flex flex-col max-w-[360px] w-[360px]">
      <div class="flex flex-col w-full">
        <h1 class="text-4xl font-semibold tracking-tighter leading-none text-gray-900">Sign up</h1>
        <p class="mt-3 text-base text-slate-600">Create an account to get started.</p>
        <form action="/api/auth/register" method="post" class="flex flex-col mt-8 w-full rounded-xl">
          <div class="flex flex-col w-full">
            <div class="flex flex-col mb-5">
              <label for="name" class="text-sm font-medium leading-none text-slate-700">Name</label>
              <input 
                type="text" 
                name="name" 
                id="name" 
                class="px-3.5 py-2.5 mt-1.5 w-full text-base bg-white rounded-lg border border-gray-300 border-solid shadow-sm focus:border-violet-500 focus:ring-2 focus:ring-violet-500"
                placeholder="Enter your name"
                required
              />
            </div>
            <div class="flex flex-col mb-5">
              <label for="email" class="text-sm font-medium leading-none text-slate-700">Email</label>
              <input 
                type="email" 
                name="email" 
                id="email" 
                class="px-3.5 py-2.5 mt-1.5 w-full text-base bg-white rounded-lg border border-gray-300 border-solid shadow-sm focus:border-violet-500 focus:ring-2 focus:ring-violet-500"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="flex flex-col">
              <label for="password" class="text-sm font-medium leading-none text-slate-700">Password</label>
              <input 
                type="password" 
                name="password" 
                id="password" 
                class="px-3.5 py-2.5 mt-1.5 w-full text-base bg-white rounded-lg border border-gray-300 border-solid shadow-sm focus:border-violet-500 focus:ring-2 focus:ring-violet-500"
                required
              />
            </div>
          </div>
          <button type="submit" class="flex justify-center items-center px-4 py-2.5 mt-6 w-full text-base font-semibold text-white bg-black rounded-lg border-2 border-solid shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900">
            Sign up
          </button>
          <div class="flex flex-col justify-center mt-4 w-full text-slate-700">
              <button type="button" class="flex overflow-hidden gap-3 justify-center items-center px-4 py-2.5 w-full bg-white rounded-lg border border-gray-300 border-solid shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500">
                  <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/8a18f0872e7d2f98af102ccd3cb05fc35f00fa15824512bbb68aeba2303a3223?placeholderIfAbsent=true&apiKey=b9aac72cde80481fbc31d8b06e910272" alt="" class="object-contain shrink-0 self-stretch my-auto w-6 aspect-square"/>
                  <span>Sign up with Google</span>
              </button>
              <button type="button" class="flex overflow-hidden gap-3 justify-center items-center px-4 py-2.5 mt-3 w-full bg-white rounded-lg border border-gray-300 border-solid shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500">
                  <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/9c725e04dadb8988355bdef7d9090d93d0706880f1d0d57d8668b197673bec0b?placeholderIfAbsent=true&apiKey=b9aac72cde80481fbc31d8b06e910272" alt="" class="object-contain shrink-0 self-stretch my-auto aspect-square w-[22px]"/>
                  <span>Sign in with LinkedIn</span>
              </button>
          </div>
        </form>
        <div class="flex justify-center gap-1 mt-8 text-sm leading-none">
          <span class="text-slate-600">Already have an account?</span>
          <a href="/signin" class="font-semibold text-violet-700 hover:text-violet-600 focus:outline-none focus:underline">Sign in</a>
        </div>
      </div>
    </div>
  </main>
</Layout>