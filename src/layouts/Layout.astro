---
import UserMenu from '../components/UserMenu.vue';

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <header class="max-w-[1280px] mx-auto px-16 flex items-center justify-between py-4 bg-white shadow-sm">
      {/* Left - Wordmark Logo */}
      <div class="flex items-center">
        <a href="/" class="text-gray-600 hover:text-gray-900"><img src="logo.svg" alt="Venture Index Logo" class="w-auto h-6" /></a>
      </div>

      {/* Center - Navigation */}
      <nav class="flex items-center space-x-6">
        <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
        <a href="/companies" class="text-gray-600 hover:text-gray-900">Companies</a>
        <a href="/investors" class="text-gray-600 hover:text-gray-900">Investors</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900">About</a>
      </nav>

      {/* Right - Auth Buttons */}
      <div class="flex items-center gap-2">
        {accessToken && refreshToken ? 
		<UserMenu client:load/> 
		: <div class="flex gap-2"><a href="/signin" class="text-gray-600 hover:text-gray-900 px-4 py-2 rounded-md border border-gray-300">Sign in</a><a href="/signup" class="text-gray-600 hover:text-gray-900 px-4 py-2 rounded-md border border-gray-300">Sign up</a></div>}
      </div>
    </header>
    <main>
      <slot class="max-w-[1280px] mx-auto px-16" />
    </main>
  </body>
</html>
